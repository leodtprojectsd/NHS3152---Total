<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TLogger.App">
    <Application.Resources>
        <ResourceDictionary>

            <ControlTemplate x:Key="CommonControlTemplate">

                <StackLayout Spacing="0">

                    <!--Header-->
                    <BoxView HeightRequest="1" Color="#E0E0E0" HorizontalOptions="FillAndExpand"/>
                    <Label Text="{TemplateBinding BindingContext.TitleText}" FontAttributes="Bold" FontSize="Medium"
                           TextColor="#E8B410" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,5"/>
                    <BoxView HeightRequest="1" Color="#E8B410" HorizontalOptions="FillAndExpand"/>

                    <!--Content-->
                    <ContentPresenter HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                </StackLayout>
            </ControlTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>