<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow android:background="#83BEE8">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            app:buttonTint="@color/white" />

        <TextView
            android:fontFamily="@font/glegoo"
            android:layout_width="wrap_content"
            android:id="@+id/title"
            android:textSize="15sp"
            android:textColor="@color/white"
            />
    </TableRow>

    <TableRow
        android:background="#A7D4F3"
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Cod version:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="R:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="V1:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="V2:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vds:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IpA:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Native Value:"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/glegoo"
            />

    </TableRow>

    <TableRow android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10" >




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/codTable"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/rTable"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/v1Table"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/v2Table"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/vdsTable"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ipaTable"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/nativeTable"
            android:textSize="10dp"
            android:fontFamily="@font/glegoo"/>

    </TableRow>

</TableLayout>